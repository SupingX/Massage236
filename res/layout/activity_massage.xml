<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bg_main"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <com.mycj.massage.view.AlphaImageView
            android:id="@+id/img_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:src="@drawable/ic_back_" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/massage_model"
            android:textColor="@color/text_main"
            android:textSize="18sp" >
        </TextView>

        <ImageView
            android:id="@+id/img_tongshi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:padding="12dp"
            android:src="@drawable/ic_tongbu_off" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@android:color/white" >
        </View>
    </RelativeLayout>

    <!-- ******************************** -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <com.mycj.massage.view.ColorCircleView
            android:id="@+id/cc_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_fuzai1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                android:src="@drawable/ic_electload" />

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_time"
                   android:drawablePadding="2dp"
                android:gravity="center"
                android:text="15:00"
                android:textColor="@color/text_main"
                android:textSize="14sp" >
            </TextView>

            <com.mycj.massage.view.AlphaImageView
                android:id="@+id/img_start_btn_1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp" >

            <com.mycj.massage.view.AlphaImageView
                android:id="@+id/img_ble_a_state"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:src="@drawable/ic_ble_icon_grey" />

            <com.mycj.massage.view.AlphaTextView
                android:id="@+id/tv_ble_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_time_bg"
                android:textColor="@drawable/selector_time_text" >
            </com.mycj.massage.view.AlphaTextView>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <com.mycj.massage.view.ColorCircleView
               android:id="@+id/cc_b"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clickable="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_fuzai2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:padding="2dp"
                android:src="@drawable/ic_electload" />

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_time"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="15:00"
                android:textColor="@color/text_main"
                android:textSize="14sp" >
            </TextView>

            <com.mycj.massage.view.AlphaImageView
                android:id="@+id/img_start_btn_2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_start" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="4dp" >

            <com.mycj.massage.view.AlphaImageView
                     android:id="@+id/img_ble_b_state"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:clickable="true"
                android:src="@drawable/ic_ble_icon_grey" />

            <com.mycj.massage.view.AlphaTextView
                android:id="@+id/tv_ble_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_time_bg"
                android:textColor="@drawable/selector_time_text" >
            </com.mycj.massage.view.AlphaTextView>
            
           
        </LinearLayout>
             <com.mycj.massage.view.SanView
                 android:clickable="true"
                 android:id="@+id/v_history"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:layout_height="90dp"
                 >
            </com.mycj.massage.view.SanView>
    </RelativeLayout>

</LinearLayout>